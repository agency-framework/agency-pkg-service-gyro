.partial[data-partial="fragments/horizontal-segments/view"] {
  position: relative;
  height: 100%;
  float: left;
  box-sizing: border-box;
  border: solid #cccccc;
  border-width: 1px 1px 1px 0px;
  background-color: rgba(0, 0, 0, 0.00);
  vertical-align: middle;
  >.info {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    font-size: calc(20 / 16)rem;
    font-weight: bold;
    font-family: monospace;
    text-align: center;
    line-height: 2;
  }
  >[data-partial="elements/indicator/horizontal-segments"] {
    top: 2em;
    box-sizing: border-box;
    width: 80%;
    margin-left: 10%;
  }
  >.bar {
    position: absolute;
    top: 0;
    height: 100%;
    background: rgba(255, 0, 0, 0.4);
    width: 40%;
    &.left {
      left: 0;
    }
    &.right {
      right: 0;
    }
  }
  &.in {
    >.bar {
      background: rgba(0, 255, 0, 0.2);
    }
  }
  &.out {
    >.bar {
      background: rgba(255, 0, 0, 0.2);
    }
  }
}
