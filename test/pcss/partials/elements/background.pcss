.partial[data-partial="elements/background"], .partial[data-partial^="elements/background/"] {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  display: block;
  >span {
    display: block;
    width: 100%;
    height: 100%;
  }
  canvas {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    pointer-events: none
  }
  >.debug {
    position: absolute;
    top: 0;
    left: 0;
    width: 10vw;
    height: auto;
    background: magenta;
  }
}
